<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ningling.mapper.OrderMapper">

    <insert id="createOrder" parameterType="Order" useGeneratedKeys="true" keyProperty="orderId" keyColumn="order_id">
        INSERT INTO orders (user_id, total_amount, status, created_time, updated_time)
        VALUES (#{userId}, #{totalAmount},#{status}, #{createdTime}, #{updatedTime})
    </insert>
    <update id="updateOrder">
        update orders
        <set>
            <if test="status != null">
                `status` = #{status}
            </if>
        </set>
        <where>
            <if test="orderId != null">
                 order_id = #{orderId}
            </if>
        </where>
    </update>
    <update id="updateOrderDetail">
        update order_details
        <set>
            <if test="updatedTime != null">
                updated_time = #{updatedTime}
            </if>
        </set>
        <where>
            order_detail_id = #{orderDetailId}
        </where>
    </update>
</mapper>
